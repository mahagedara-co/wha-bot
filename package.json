jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '16' # Or whichever version you are using

    - name: Install dependencies
      run: npm install

    - name: Run WhatsApp Bot
      run: |
        npm install -g pm2
        pm2 start bot.js
        pm2 save
